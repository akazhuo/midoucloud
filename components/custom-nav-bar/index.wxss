.custom-nav-bar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  padding: 0 200rpx 0 40rpx;
  background-color: initial;
  -webkit-transition: background-color .1s;
  transition: background-color .1s;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  z-index: 99;
}

.custom-nav-bar .logo-wrap {
  width: 80rpx;
  height: 80rpx;
}


.custom-nav-bar .logo-wrap .logo {
  width: 100%;
}

.custom-nav-bar .middle-content {
  flex: 1;
  height: 60rpx;
  margin-left: 16rpx;
  border-radius: 40rpx;
  background-color: #eee;
  opacity: .7;
}

.custom-nav-bar .middle-content input {
  /* line-height: 60rpx; */
  height: 100%;
  padding: 0 50rpx;
  font-size: 24rpx;
  background: none;
}