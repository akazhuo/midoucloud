/* components/banner.wxss */
.banner {
  position: relative;
  width: 100%;
  margin-top: 30rpx;
  padding-left: 16px;
  padding-right: 16px;
  box-sizing: border-box;
}

.banner .swiper {
  height: 100%;
  width: 100%;

}

.banner .swiper .swiper-item {
  background-color: #eee;
}

.banner .swiper .swiper-item .swiper-img {
 width: 100%;
}

.banner .indicator-dots {
  position: absolute;
  display: grid;
  bottom: 10px;
  left: 50%;
  height: 6rpx;
  border-radius: 6rpx;
  background-color: #fff;
  grid-template-columns: repeat(3, 50px);
  transform:translateX(-50%) ;
}

.banner .indicator-dots .dots.active {
  background-color: #ef5350;
}